# =========================
# Host / n8n
# =========================
N8N_HOST=n8n.intern.local
GENERIC_TIMEZONE=Europe/Berlin
N8N_ENCRYPTION_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET

# =========================
# PostgreSQL
# =========================
POSTGRES_DB=n8n
POSTGRES_USER=n8n_user
POSTGRES_PASSWORD=CHANGE_ME_DB_PASSWORD

# =========================
# OIDC / Entra (Variante 2)
# =========================
# Beispiel: https://login.microsoftonline.com/<TENANT_ID>/v2.0
OIDC_ISSUER_URL=https://login.microsoftonline.com/CHANGE_ME_TENANT_ID/v2.0
OIDC_CLIENT_ID=CHANGE_ME_CLIENT_ID
OIDC_CLIENT_SECRET=CHANGE_ME_CLIENT_SECRET

# Base64-encoded 32 bytes (openssl rand -base64 32)
OAUTH2_PROXY_COOKIE_SECRET=CHANGE_ME_COOKIE_SECRET

# Nur diese Domain zulassen; * f√ºr alle
OIDC_ALLOWED_EMAIL_DOMAIN=desitin.de

# =========================
# Backup
# =========================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
